# Enable real email integration
USE_REAL_EMAIL=false  # set to "true" to enable SMTP/IMAP backend

# IMAP settings (for reading email)
EMAIL_IMAP_HOST=imap.example.com

# SMTP settings (for sending email)
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587

# Auth credentials
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-app-password  # do NOT use your real Gmail password
